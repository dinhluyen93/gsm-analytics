---
layout: layouts/dashboard.njk
title: Bảng Điều Khiển
---
<!--begin::Toolbar -->
<div id="kt_app_toolbar" class="app-toolbar pt-5">
    <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex justify-content-center align-items-stretch">
        <div class="app-toolbar-wrapper d-flex flex-stack flex-wrap align-items-center gap-4 w-100">
            <h1 class="page-heading lh-0">
                {{ title }}
            </h1>
                        <!--begin::Daterangepicker(defined in src/js/layout/app.js)-->
            <div class="btn btn-sm btn-light d-flex align-items-center px-4" id="date_range_picker">           
                <!--begin::Display range-->
                <div class="text-gray-600 fw-bold">
                    Tải phạm vi ngày...
                </div>
                <!--end::Display range-->

                <i class="ki-duotone ki-calendar-8 fs-1 ms-2 me-0"><span class="path1"></span><span class="path2"></span><span class="path3"></span><span class="path4"></span><span class="path5"></span><span class="path6"></span></i>          
            </div>  
            <!--end::Daterangepicker-->
        </div>
    </div>
</div>
<!--begin::Content -->
<div id="kt_app_content" class="app-content flex-column-fluid">
    <div id="kt_app_content_container" class="app-container container-fluid">
        <div class="row g-5 g-xl-10">
            <div class="col-xl-4 mb-xl-10">
                <div class="card card-flush h-xl-100" id="card_daily_statistics"></div>
            </div>
            <div class="col-xl-8 mb-5 mb-xl-10">
                <div class="card card-flush h-xl-100" id="card_daily_chart_bar"></div>
            </div>
        </div>
        <div class="row gy-5 g-xl-10">
            <div class="col-md-6 col-lg-6 col-xl-6 col-xxl-3 mb-md-5 mb-xl-10">
                <div class="card card-flush h-md-50 mb-5 mb-xl-10" id="weekly_earning">
                    <div class="card-header pt-5">
                        <div class="card-title d-flex flex-column">
                            <div class="d-flex align-items-center">
                                <span class="fs-4 fw-semibold text-gray-500 me-1 align-self-start">₫</span>
                                <span class="fs-2hx fw-bold text-gray-900 me-2 lh-1 ls-n2" id="weekly_earning_total">0</span>
                                <span class="badge badge-light-success fs-base" id="weekly_earning_percent">                                
                                    <i class="ki-duotone ki-arrow-up fs-5 text-success ms-n1"><span class="path1"></span><span class="path2"></span></i> 
                                    0%
                                </span>            
                            </div>
                            <span class="text-gray-500 pt-1 fw-semibold fs-6">Thu nhập trong tuần</span>
                        </div>
                    </div>
                    <div class="card-body pt-2 pb-4 d-flex align-items-center">
                        <div class="d-flex flex-center me-5 pt-2">
                            <div 
                                id="widget_week_income_chart" 
                                style="min-width: 70px; min-height: 70px" 
                                data-kt-size="70" 
                                data-kt-line="11">
                            </div>
                        </div>
                        <div class="d-flex flex-column content-justify-center w-100">
                            <div class="d-flex fs-6 fw-semibold align-items-center">
                                <div class="bullet w-8px h-6px rounded-2 bg-danger me-3"></div>
                                <div class="text-gray-500 flex-grow-1 me-4">Doanh Số</div>
                                <div class="fw-bolder text-gray-700 text-xxl-end" id="weekly_earning_sales">0₫</div>
                            </div>
                            <div class="d-flex fs-6 fw-semibold align-items-center my-3">
                                <div class="bullet w-8px h-6px rounded-2 bg-primary me-3"></div>
                                <div class="text-gray-500 flex-grow-1 me-4">Thưởng Tuần</div>
                                <div class="fw-bolder text-gray-700 text-xxl-end" id="weekly_earning_bonus_week">0₫</div>
                            </div>
                            <div class="d-flex fs-6 fw-semibold align-items-center">
                                <div class="bullet w-8px h-6px rounded-2 me-3" style="background-color: #E4E6EF"></div>
                                <div class="text-gray-500 flex-grow-1 me-4">Vượt Chuyến</div>
                                <div class=" fw-bolder text-gray-700 text-xxl-end" id="weekly_earning_bonus_day">0₫</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card card-flush h-md-50 mb-xl-10">
                    <div class="card-header pt-5">
                        <div class="card-title d-flex flex-column">
                            <div class="d-flex align-items-center">
                                <span class="fs-4 fw-semibold text-gray-500 me-1 align-self-start">₫</span>
                                <span class="fs-2hx fw-bold text-gray-900 me-2 lh-1 ls-n2" id="weekly_point_reward">0</span>
                                <span class="badge badge-light-danger fs-base">                                
                                <i class="ki-duotone ki-arrow-down fs-5 text-danger ms-n1"><span class="path1"></span><span class="path2"></span></i> 
                                0%
                                </span>            
                            </div>
                            <span class="text-gray-500 pt-1 fw-semibold fs-6">Mốc thưởng trong tuần</span>             
                        </div>
                    </div>
                    <div class="card-body d-flex align-items-end pt-0">
                        <div class="d-flex align-items-center flex-column mt-3 w-100">
                            <div class="d-flex justify-content-between w-100 mt-auto mb-2">
                                <span class="fw-bolder fs-6 text-gray-900" id="weekly_point_missing">0 to Goal</span>
                                <span class="fw-bold fs-6 text-gray-500" id="weekly_point_percent">0%</span>
                            </div>
                            <div class="h-8px mx-3 w-100 bg-light-success rounded" id="weekly_point_progress">
                                <div class="bg-success rounded h-8px" role="progressbar" style="width: 62%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-6 col-xl-6 col-xxl-3 mb-md-5 mb-xl-10">
                <div class="card card-flush h-md-50 mb-5 mb-xl-10">
                    <div class="card-header pt-5">
                        <div class="card-title d-flex flex-column">
                            <div class="d-flex align-items-center">
                                <span class="fs-4 fw-semibold text-gray-500 me-1 align-self-start">₫</span>
                                <span class="fs-2hx fw-bold text-gray-900 me-2 lh-1 ls-n2" id="weekly_bonus_day">0</span>
                                <span class="badge badge-light-success fs-base">                                
                                <i class="ki-duotone ki-arrow-up fs-5 text-success ms-n1"><span class="path1"></span><span class="path2"></span></i> 
                                0%
                                </span>            
                            </div>
                            <span class="text-gray-500 pt-1 fw-semibold fs-6">Vượt chuyến trong tuần</span>
                        </div>
                    </div>
                    <div class="card-body d-flex align-items-end px-0 pb-0">
                        <div id="widget_week_bonus_day_chart" class="w-100" style="height: 80px"></div>
                    </div>
                </div>
                <div class="card card-flush h-md-50 mb-xl-10">
                    <div class="card-header pt-5">
                        <div class="card-title d-flex flex-column">
                            <span class="fs-2hx fw-bold text-gray-900 me-2 lh-1 ls-n2">Avg.</span>
                            <span class="text-gray-500 pt-1 fw-semibold fs-6">Chỉ số trung bình trong tuần</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="d-flex flex-stack">
                            <div class="d-flex align-items-center me-5">
                                <img src="/assets/media/icons/earning.png" class="me-4 w-20px" style="border-radius: 4px" alt="">                     
                                <div class="me-5">
                                    <span class="text-gray-800 fw-bold text-hover-primary fs-6">Doanh Số</span>  
                                </div>
                            </div>
                            <div class="d-flex align-items-center" id="week_avg_sales">
                                <span class="text-gray-800 fw-bold fs-4 me-3">0</span>
                                <span class="badge badge-light-success fs-base">                                
                                <i class="ki-duotone ki-arrow-up fs-5 text-success ms-n1"><span class="path1"></span><span class="path2"></span></i> 0%
                                </span>
                            </div>
                        </div>
                        <div class="separator separator-dashed my-3"></div>
                        <div class="d-flex flex-stack">
                            <div class="d-flex align-items-center me-5">
                                <img src="/assets/media/icons/kmh.png" class="me-4 w-20px" style="border-radius: 4px" alt="">                     
                                <div class="me-5">
                                    <span class="text-gray-800 fw-bold text-hover-primary fs-6">Quãng Đường</span>
                                </div>
                            </div>
                            <div class="d-flex align-items-center" id="week_avg_km">
                                <span class="text-gray-800 fw-bold fs-4 me-3">0</span>
                                <span class="badge badge-light-success fs-base">                                
                                <i class="ki-duotone ki-arrow-up fs-5 text-success ms-n1"><span class="path1"></span><span class="path2"></span></i> 0%
                                </span>
                            </div>
                        </div>
                        <div class="separator separator-dashed my-3"></div>
                        <div class="d-flex flex-stack">
                            <div class="d-flex align-items-center me-5">
                                <img src="/assets/media/icons/travel.png" class="me-4 w-20px" style="border-radius: 4px" alt="">                     
                                <div class="me-5">
                                    <span class="text-gray-800 fw-bold text-hover-primary fs-6">Chuyến Xe</span> 
                                </div>
                            </div>
                            <div class="d-flex align-items-center" id="week_avg_trip">
                                <span class="text-gray-800 fw-bold fs-4 me-3">0</span>
                                <span class="badge badge-light-success fs-base">                                
                                <i class="ki-duotone ki-arrow-up fs-5 text-success ms-n1"><span class="path1"></span><span class="path2"></span></i> 0%
                                </span>
                            </div>
                        </div>
                        <div class="separator separator-dashed my-3"></div>
                        <div class="d-flex flex-stack">
                            <div class="d-flex align-items-center me-5">
                                <img src="/assets/media/icons/hand-gesture.png" class="me-4 w-20px" style="border-radius: 4px" alt="">                     
                                <div class="me-5">
                                    <span class="text-gray-800 fw-bold text-hover-primary fs-6">Điểm Thưởng</span>
                                </div>
                            </div>
                            <div class="d-flex align-items-center" id="week_avg_point">
                                <span class="text-gray-800 fw-bold fs-4 me-3">0</span>
                                <span class="badge badge-light-success fs-base">                                
                                <i class="ki-duotone ki-arrow-up fs-5 text-success ms-n1"><span class="path1"></span><span class="path2"></span></i> 0%
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-xl-12 col-xxl-6 mb-5 mb-xl-0">
                <div class="card card-flush overflow-hidden h-md-100">
                    <div class="card-header py-5">
                        <h3 class="card-title align-items-start flex-column">            
                            <span class="card-label fw-bold text-gray-900">Biểu Đồ Doanh Số</span>
                            <span class="text-gray-500 mt-1 fw-semibold fs-6">Dữ liệu trong 30 ngày gần nhất</span>
                        </h3>
                    </div>
                    <div class="card-body d-flex justify-content-between flex-column pb-1 px-0">
                        <div class="px-9 mb-5">
                            <div class="d-flex mb-2">
                                <span class="fs-4 fw-semibold text-gray-500 me-1">₫</span>
                                <span class="fs-2hx fw-bold text-gray-800 me-2 lh-1 ls-n2" id="month_sales_show">0</span>                
                            </div>
                            <span class="fs-6 fw-semibold text-gray-500" id="month_sales_missing">Thiếu 8.5 triệu đến mục tiêu</span>
                        </div>
                        <div id="kt_charts_widget_3" class="min-h-auto ps-4 pe-6" style="height: 300px"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
